@using PortfolioBizObjects
@model bizDevSubSection
<div class="row mt-3 d-flex justify-content-center">
    <button class="btn btn-outline-danger mx-1">
        <a target="_blank" href="@Model.Url">@Model.DevSubSectionDesc Website</a>
    </button>
    <button class="btn btn-outline-danger mx-1" id="btnwireframe">
        Wireframe
    </button>
</div>

<div id="demo" class="carousel slide mt-2" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>
        <li data-target="#demo" data-slide-to="4"></li>
        <li data-target="#demo" data-slide-to="5"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).1.png" />
        </div>
        <div class="carousel-item">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).2.png" />
        </div>
        <div class="carousel-item">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).3.png" />
        </div>
        <div class="carousel-item">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).4.png" />
        </div>
        <div class="carousel-item">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).5.png" />
        </div>
        <div class="carousel-item">
            <img class=" mx-auto d-block rounded" src="~/images/@(Model.DevSubSectionDesc).6.png" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon bg-dark"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon bg-dark"></span>
    </a>
</div>

<script>
    $(document).ready(function () {
        $("#demo").hide();
        $("#btnwireframe").click(function () {
            $("#demo").show();
        })
    })
</script>